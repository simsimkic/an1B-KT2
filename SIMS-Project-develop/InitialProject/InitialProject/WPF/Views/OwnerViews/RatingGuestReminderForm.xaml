<Window x:Class="InitialProject.WPF.Views.RatingGuestReminderForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.WPF.Views"
        mc:Ignorable="d"
        Title="Reminder" Height="250" Width="350"  WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <TextBlock TextWrapping="Wrap" Text="You have unrated guests!" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" FontWeight="Bold" Width="330"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Name="ButtonRateNow" Content="Rate now" Width="100" Height="40" Margin="45,0,30,0" Click="ButtonRateNow_Click"/>
            <Button Name="ButtonRemindMeLater" Content="Remind me later" Width="100" Height="40" Margin="30,0,30,0" Click="ButtonRemindMeLater_Click"/>
        </StackPanel>
    </Grid>
</Window>
